<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.models.courses.Course" table="course">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column="description" type="java.lang.String"/>
        <property name="board" column="board" type="java.lang.String"/>
        <property name="movesThatTheComputerWillPlay" column="moves_that_the_computer_will_play"
                  type="java.lang.String"/>
        <property name="movesThatThePlayerShouldPlay" column="moves_that_the_player_should_play"
                  type="java.lang.String"/>
        <property name="playerId" column="player_id"
                  type="java.lang.Integer"/>
        <property name="courseStatus" column="course_status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.example.models.courses.CourseStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>
    </class>
</hibernate-mapping>
